<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/idCVNewFv"
        android:elevation="5dp">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:id="@+id/idTVNewFvMainHeading"
          android:padding="5dp"
          android:ellipsize="end"
          android:maxLines="2"
          android:textColor="@color/black"
          android:text="Main heading"
          android:textSize="20sp"
          android:textStyle="bold"
          >
      </TextView>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="130dp"
          android:layout_marginTop="10dp"
          android:orientation="horizontal">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="6"
              android:padding="5dp"
              android:id="@+id/idTVContentNewFv"
              android:textSize="15sp"
              android:text = "Main content"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="5dp"
              android:layout_weight="1"
              android:scaleType="centerCrop"
              android:id="@+id/idIVNewFv"
              />
      </LinearLayout>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="13sp"
          android:text="by Duc Minh"
          android:textStyle="italic"
          android:id="@+id/idTVAuthorNewFv"
          android:textColor="@color/black"
          android:padding="5dp"
          />
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:text="Published at"
              android:id="@+id/idTVCreDateNewFv"
              android:layout_alignParentLeft="true"
              android:textColor="@color/black"
              android:padding="5dp"

              />
          <ImageView
              android:layout_width="26dp"
              android:layout_height="14dp"
              android:src="@drawable/ic_delete_button"
              android:layout_alignParentRight="true"
              android:onClick="onDeleteNewFavor"/>
      </RelativeLayout>

  </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>