<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NewDetailActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/idToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_back"
            android:onClick="onBackMain"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BÁO MỚI"

            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginEnd="15dp"
            android:textStyle="bold"
            android:layout_marginRight="15dp"
            />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idToolbar"
        android:id="@+id/idSVNewDetailContent"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/idIVNews"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="3dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/idTVTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIVNews"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVTitle"
            android:id="@+id/middleContentNewDetail"
            android:layout_marginTop="3dp">
            <TextView
                android:id="@+id/idTVCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:padding="4dp"
                android:text="Category"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="80dp"
                android:src="@drawable/ic_share_new" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="32dp"
                android:onClick="onSaveFavor"
                android:src="@drawable/ic_save_favor" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:layout_below="@id/middleContentNewDetail"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:textColor="@color/black"
            android:id="@+id/idTVContent"
            android:textSize="18sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVContent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/idTVAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="32dp"
                android:layout_marginBottom="4dp"
                android:padding="4dp"
                android:text="Author"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/idTVCreateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentRight="true"
                android:padding="4dp"
                android:text="Create Date"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idSVNewDetailContent"
        android:layout_gravity="start"
        android:id="@+id/navbottom">

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>